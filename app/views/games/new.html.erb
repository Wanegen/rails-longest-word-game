<div class="d-flex flex-column align-items-center">
  <div class="d-flex flex-row">
    <% @letters.each do |letter| %>
        <p class="bluebloc d-flex justify-content-center align-items-center m-3"><%= letter %></p>
    <% end %>
  </div>

    <h5 class="mt-3">What is the longest word you can find?</h5>
    <form action="/score" method="POST" data-turbo="false" class="form-inline">
      <div class="d-flex form-group mx-sm-3 mb-2">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input class="form-control mb-2" placeholder="Give your word!" type="text" name="new">
          <%= hidden_field_tag :letters, @letters %>
          <input class="btn btn-primary mb-2" type="submit" value="Submit!">
      </div>
    </form>
</div>
